<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:padding="25dip"
    android:orientation="vertical"
    android:background="@color/blue2" >

    <ImageView
        android:id="@+id/map_img"
        android:layout_width="match_parent"
        android:layout_height="136dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="41dp" />

    <TextView
        android:id="@id/txtWin"
        android:layout_width="120dp"
        android:layout_height="37dp"
        android:layout_marginStart="120dp"
        android:textAlignment="center"
        android:textColor="@color/lightYellow"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="11dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="21dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:text="DERROTA" />

        <Space
            android:layout_width="15dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey"
            android:textColor="@color/white"
            android:text="EMPATE" />

        <Space
            android:layout_width="15dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            android:text="VICTORIA" />

        <Space
            android:layout_width="21dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtScore2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PuntuaciÃ³n de la Partida:"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <EditText
            android:id="@+id/editScore"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:hint="13-7"
            android:textColorHint="@color/grey"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtPerformance2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtWin"
            android:layout_marginStart="90dp"
            android:text="K/D/A"
            android:textColor="@color/grey"
            android:textSize="17sp"
            android:textStyle="bold"
            android:typeface="sans"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/editPerformance"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_below="@id/txtWin"
            android:layout_marginStart="25dp"
            android:backgroundTint="@color/white"
            android:hint="10/0/7"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/grey"
            android:textSize="18sp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="47dp" />

    <TextView
        android:id="@+id/txtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:text="" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:textColor="@color/white" />

</LinearLayout>